@{
    ViewBag.Title = "Language Translation Tool using Microsoft Translator";
}

<div class="container">
    <div id="dialog" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 class="modal-title">Error</h4>
                </div>
                <div class="modal-body">
                    <p>An error occured. Please try again.</p>                    
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>                    
                </div>
            </div>
        </div>
    </div>
    <h2>@ViewBag.Title</h2>
    <p>Choose source and target languages from the dropdown to translate</p>
    

    <form class="form-horizontal">
        <div class="form-group">
            <div class="col-sm-2">
                <select class="selectpicker" title="Choose source language" id="sourceLang">
                    <option value="en">English</option>
                    <option value="it">Italian</option>
                    <option value="fr">French</option>
                    <option value="de">German</option>
                    <option value="hi">Hindi</option>
                    <option value="ar">Arabic</option>
                    <option value="zh-CHS">Simplified Chinese (China)</option>
                    <option value="zh-CHT">Traditional Chinese (Taiwan)</option>
                </select>
            </div>
            <div class="col-sm-10">
                <textarea required class="form-control" id="txtToTranslate" placeholder="Enter text to translate"></textarea>
            </div>
        </div>


        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-1">
                <button type="submit" class="btn btn-primary" id="btnTranslate">Translate</button>
            </div>
            <div class="col-sm-5">
                <button type="submit" class="btn btn-primary" id="btnClear">Clear</button>
            </div>

        </div>
        <div class="form-group">
            <div class="col-sm-2">
                <select class="selectpicker" title="Choose target language" id="targetLang">
                    <option value="en">English</option>
                    <option value="it">Italian</option>
                    <option value="fr">French</option>
                    <option value="de">German</option>
                    <option value="hi">Hindi</option>
                    <option value="ar">Arabic</option>
                    <option value="zh-CHS">Simplified Chinese (China)</option>
                    <option value="zh-CHT">Traditional Chinese (Taiwan)</option>
                </select>
            </div>
            <div class="col-sm-10">
                <textarea readonly class="form-control" id="translatedText" placeholder="View translated text here"></textarea>
            </div>
        </div>
    </form>
</div>
